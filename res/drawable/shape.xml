<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充颜色 -->
    <solid android:color="#FFFAF0" >
    </solid>

    <!-- 线的宽度，颜色灰色 -->
    <stroke
        android:width="1dp"
        android:color="#D5D5D5" >
    </stroke>

    <!-- 矩形的圆角半径 -->
    <corners android:radius="15dip" />

    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

</shape>