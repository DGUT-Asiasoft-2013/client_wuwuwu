<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_search"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_margin="3dp" />

        <TextView
            android:id="@+id/name_search"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/image_search"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="2dp"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/price_search"
            android:layout_width="87dp"
            android:layout_height="53dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name_search"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="9999.99"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignTop="@+id/price_search"
            android:layout_toLeftOf="@+id/price_search"
            android:gravity="center_vertical"
            android:text="¥"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/describe_search"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_below="@+id/name_search"
            android:layout_toLeftOf="@+id/rmb"
            android:layout_toRightOf="@+id/image_search"
            android:ellipsize="end"
            android:lines="3"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述" />
    </RelativeLayout>

</FrameLayout>