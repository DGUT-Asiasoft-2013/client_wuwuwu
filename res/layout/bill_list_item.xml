<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bill_list_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/bill_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsf"
        android:layout_alignTop="@+id/bill_list_iv"
        android:layout_toRightOf="@+id/bill_list_iv"
        android:layout_toEndOf="@+id/bill_list_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/bill_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsfgdshgfdgjhgfj"
        android:layout_alignBottom="@+id/bill_list_iv"
        android:layout_alignLeft="@+id/bill_list_item_name"
        android:layout_alignStart="@+id/bill_list_item_name" />

</RelativeLayout>