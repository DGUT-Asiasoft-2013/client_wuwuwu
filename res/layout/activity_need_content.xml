<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/login_background"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/back_need_content"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#ff0099cc"
            android:src="@drawable/fanhui_02" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="需求详情"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_reply_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/login_background"
            android:text="回复" 
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_weight="4"
            android:id="@+id/title_need_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:text="标题："
            android:textStyle="bold|italic"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@drawable/time" />

            <TextView
                android:id="@+id/time_need_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:text="33天"
                android:textSize="15sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <com.example.palmcampusmarket_client.fragment.AvatarView
                android:id="@+id/avatar_need_content"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/name_need_content"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:lines="1"
                android:text="xxxxx"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold" />
        </LinearLayout>

        <View 
            android:layout_width="1dp"
            android:layout_height="145dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/text_need_content"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:lines="8"
            android:padding="3dp"
            android:text="123456
            2
            3
            4
            5
            6
            7
            8" />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RadioGroup
        android:id="@+id/rd_need_content"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/reply_need"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tabbar_check"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="回复"
            android:textColor="@color/tabbar_checked_text_color"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/author_need_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tabbar_check"
            android:button="@null"
            android:gravity="center"
            android:text="发布者"
            android:textColor="@color/tabbar_checked_text_color"
            android:textSize="25sp" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/need_content_checked"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>