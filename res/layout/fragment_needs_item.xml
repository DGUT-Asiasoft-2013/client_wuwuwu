<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_needs"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="求购二手单车"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/text_needs"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:lines="5"
                android:padding="2dp"
                android:text="99999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.example.palmcampusmarket_client.fragment.AvatarView
                android:id="@+id/avatar_needs_author"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/name_needs_author"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:lines="1"
                android:padding="2dp"
                android:text="爱上对方过后就哭了"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/time" />

                <TextView
                    android:id="@+id/time_needs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:text="33天"
                    android:textSize="22sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>